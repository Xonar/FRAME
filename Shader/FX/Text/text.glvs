#version 330

//Input
layout(location = 0) in vec2 pos;
layout(location = 1) in vec2 tex;
layout(location = 2) in int ch;

//Output
out vec2 vstex;
flat out int vschar;

uniform Matrices
{
  uniform mat4 Ortho;
};

//Main
void main()
{
  vstex = tex;
  vschar = ch;

  gl_Position = Ortho * vec4(pos, 0, 1);
}
