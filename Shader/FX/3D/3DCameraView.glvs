#version 330

//Output From Previous Vertex Shader
layout(location = 0) in vec4 vspos;
layout(location = 1) in vec2 vstex;
layout(location = 2) in vec4 vsnorm;

uniform mat4 WorldViewScreenMatrix;

out vec2 ftex;
out vec4 fnorm;
out vec4 fpos;

void main()
{
  ftex = vstex;
  fnorm = vsnorm;
  fpos = vspos;
  gl_Position = WorldViewScreenMatrix * vspos;
}
