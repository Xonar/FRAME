#version 330

//Output From Previous Vertex Shader
layout(location = 0) in vec3 pos;
layout(location = 1) in vec2 tex;
layout(location = 2) in vec3 norm;

uniform mat4 WorldViewMatrix;
uniform mat4 ViewScreenMatrix;

out vec2 vstex;
out vec4 vsnorm;
out vec4 vspos;

void main()
{
  vstex = tex;
  vsnorm = vec4(norm,1.f);
  vspos = vec4(pos,1.f);
  gl_Position = ViewScreenMatrix * WorldViewMatrix * vec4(pos, 1);
}
